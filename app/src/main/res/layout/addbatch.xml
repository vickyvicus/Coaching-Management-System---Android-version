<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oceanbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:text="ADD BATCH"
        android:textColor="@color/colorPrimary"
        android:padding="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:textSize="20dp"
            android:textColor="@color/colorview"/>
       <Spinner android:id="@+id/spncourse"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch Date"
            android:textColor="@color/colorview"
            android:textSize="20dp"/>

        <Spinner android:id="@+id/spnadbat30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dp"
            android:entries="@array/count30"></Spinner>
        <Spinner android:id="@+id/spnadbat12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/count12"></Spinner>

        <Spinner android:id="@+id/spnadbatyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch Time"
            android:textColor="@color/colorview"
            android:textSize="20dp"/>

        <Spinner android:id="@+id/spnadbat24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/count24"></Spinner>

        <Spinner android:id="@+id/spnadbat60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/count60"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button android:id="@+id/btnaddbatsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"/>

        <Button android:id="@+id/btnaddbatback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"/>
    </LinearLayout>


</LinearLayout>